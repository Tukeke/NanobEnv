set query_command = "copim.abook_wrapper --mutt-query '%s'"
macro generic,index,pager \ck "<shell-escape>copim.abook_wrapper<return>" "launch abook" # Press ctrl+K to open abook FIXME : Document this.
macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"
# Use this to use goobook instead of abook, I think... =P
# macro index,pager A "<pipe-message>goobook add<return>" "add the sender address to abook"
macro pager "w"      "<enter-command>set pager_index_lines=4 <enter>" # For better view on android phone
macro pager "\Cx\Cs" "<pipe-message>cat > ~/"                             # Save message
set pager_index_lines=15

