#!/bin/bash
source /etc/copim.conf

runremind(){
    remind -z -k"echo /notify_manager '%s'" > ~/.copim/irssi/remote-control -z ~/.copim/remind/reminders &
    echo $! > ~/.copim/remind/pid
}

[[ ! -e ~/.copim/remind ]] && { mkdir -p ~/.copim/remind/ ; cp $PREFIX/share/copim/reminders ~/.copim/remind/; } &>/dev/null

p=`cat ~/.copim/remind/pid`
[[ ! -e ~/.copim/remind/pid ]] && runremind # If not started
ps a|awk "/^\ $p/ {print \$NF}" || runremind # Or not currently running, we relaunch it.
