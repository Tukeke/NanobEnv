#!/bin/bash
source /etc/copim.conf
[[ ! -e ~/.copim/gnupg/ ]] && {  mkdir -p ~/.copim/gnupg/ ; 
foo=$'Warning: You won\'t be prompted again for this\n Should I create a GPG key?\nIt takes just a few seconds and will integrate perfectly with mutt to sign and encrypt your communication. [Y|n]'; read -p $foo; [[ "$REPLY"  != "N" ]] && gpg --homedir ~/.copim/gnupg/ --gen-key; } &>/dev/null
gpg --homedir ~/.copim/gnupg/ $@
